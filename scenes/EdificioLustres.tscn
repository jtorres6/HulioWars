code = "shader_type canvas_item;

uniform float time;
uniform bool day;
uniform bool light;

void fragment(){
		if(day){
			if(time < 20.0){
				COLOR = texture(TEXTURE,UV);
				COLOR.a = COLOR.a * 1.0*time/20.0;
			}
			else{
				COLOR = texture(TEXTURE,UV);
			}
		}
		else{
			if(time < 20.0){
				COLOR = texture(TEXTURE,UV);
				if(COLOR.a != 0.0){
					COLOR.a = COLOR.a * 1.0-time/20.0;
				}
			}
			else{
				COLOR = texture(TEXTURE,UV);
				COLOR.a = COLOR.a *0.0;
			}
		}
}"

